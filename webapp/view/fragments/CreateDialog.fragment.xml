<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <Dialog
        id="createDialog"
        title="Create New Item" class="sapUiContentPadding">
        <content>
            <VBox>
                <Label text="Name"/>
                <Input id="createName"/>
                <Label text="Description"/>
                <Input id="createDescription"/>
                <Label text="Status"/>
                <Input id="createStatus"/>
            </VBox>
        </content>
        <beginButton>
            <Button text="Save" press="onCreateSave"/>
        </beginButton>
        <endButton>
            <Button text="Cancel" press="onCreateCancel"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>
